<%= header "Blog Posts | Zack Sargent" %>
<%
def obfuscate(text)
    # put garbage in between all letters in a string
    def snippet(letter, class_name)
        "<span class=\"obfuscated #{class_name}\">#{letter}</span>"
    end
    text.chars.map{ snippet(_1, 'letter') }.reduce { |acc, ele|
        random_letter = ('a'..'z').to_a.sample
        acc << snippet(random_letter, 'garbage') << ele
    }
end
%>

<main>
