<%= header "Tagged #{tag_name} | Zack Sargent's Blog" %>

<main>
    <h2>
        <%=articles.size%> article<%=articles.size == 1 ? '' : ?s%> tagged &quot;<%=tag_name%>&quot;
    </h2>
    <p>See all articles sorted <a href="/blog/index.html">chronologically</a> or <a href="/tag/index.html">by tag.</a></p>
    <table>
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Length</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        <tbody>
            <% for article in articles %>
                <tr>
                    <td>
                        <%= article.date %>
                    </td>
                    <td>
                        <%= article.reading_time %>
                    </td>
                    <td> <a href="<%=article.url%>">
                            <%= article.title %>
                        </a> </td>
                </tr>
                <% end %>
        </tbody>
    </table>
</main>


<%= $footer %>